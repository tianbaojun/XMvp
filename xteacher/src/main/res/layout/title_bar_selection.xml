<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
        android:layout_height="@dimen/dp_43"
    android:background="@color/title_background_red">

    <RelativeLayout
        android:id="@+id/title_rl"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_43"
        android:layout_alignParentBottom="true"
        android:background="@color/title_background_red">

        <TextView
            android:id="@+id/title_back_img"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:clickable="true"
            android:drawableLeft="@mipmap/title_back"
            android:gravity="center"
            android:paddingLeft="@dimen/dp_15"
            android:paddingRight="@dimen/dp_15"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_16"
            android:visibility="visible" />

        <EditText
            android:id="@+id/search_student_ed"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/dp_53"
            android:layout_marginLeft="@dimen/dp_10"
            android:paddingLeft="@dimen/dp_15"
            android:paddingRight="@dimen/dp_10"
            android:layout_toRightOf="@id/title_back_img"
            android:layout_marginTop="@dimen/dp_6"
            android:layout_marginBottom="@dimen/dp_6"
            android:layout_alignBaseline="@+id/title_back_img"
            android:hint="\t输入学生姓名"
            android:drawableLeft="@mipmap/search_icon"
            android:background="@drawable/search_ed_bg"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/gray4"
            android:imeOptions="actionSearch"
            android:maxLines="1"
            android:singleLine="true"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:gravity="center"
            android:text=""
            android:textColor="@color/white"
            android:textSize="@dimen/sp_18" />

        <ImageView
            android:id="@+id/right_icon1"
            android:layout_width="@dimen/dp_43"
            android:layout_height="fill_parent"
            android:clickable="true"
            android:paddingLeft="@dimen/dp_15"
            android:paddingRight="@dimen/dp_9.5"
            android:src="@mipmap/work_side"
            android:visibility="visible"
            android:layout_alignParentRight="true"/>

        <ImageView
            android:id="@+id/grade_change"
            android:layout_width="@dimen/dp_43"
            android:layout_height="fill_parent"
            android:clickable="true"
            android:paddingLeft="@dimen/dp_15"
            android:paddingRight="@dimen/dp_9.5"
            android:src="@mipmap/term_choose"
            android:visibility="gone"
            android:layout_alignParentRight="true"/>



    </RelativeLayout>

</RelativeLayout>