<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_classz_moments_add_honour_roll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="pro.ui.activity.ClasszMomentsAddHonourRollActivity">

    <include layout="@layout/title_bar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/dp_20"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/activity_classz_moments_add_honour_roll_theme"
                android:gravity="center_vertical"/>
            <EditText
                android:id="@+id/theme_et"
                android:textColor="@color/gray9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0.5"
            android:layout_marginTop="@dimen/dp_5"
            android:background="@color/gray9"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10">
            <TextView
                android:id="@+id/tv1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/activity_classz_moments_add_honour_roll_content"/>
            <EditText
                android:layout_toRightOf="@id/tv1"
                android:id="@+id/content_et"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_100"
                android:gravity="top"
                android:textColor="@color/gray9"
                android:background="@null"/>
        </RelativeLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0.5"
            android:background="@color/gray9"
            android:layout_marginTop="@dimen/dp_5"/>

        <com.zjhz.teacher.ui.view.images.view.PicturesPreviewer
            android:id="@+id/recycler_images"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/dp_10"
            android:paddingBottom="@dimen/lay_12"
            android:paddingRight="@dimen/lay_12"
            android:paddingTop="@dimen/lay_12" />

    </LinearLayout>

</LinearLayout>
