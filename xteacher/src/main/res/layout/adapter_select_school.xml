<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        >
        <TextView
            android:id="@+id/school_name_tv"
            android:textColor="@color/text_color65"
            android:textSize="@dimen/sp_12"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/select_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/school_selected_false"
            />
    </RelativeLayout>
    <TextView
        android:id="@+id/line_view1"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layerType="software"
        android:background="@drawable/shape_dashed_color_dd928b"
        />
</LinearLayout>