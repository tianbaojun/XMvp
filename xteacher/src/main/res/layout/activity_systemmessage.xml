<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/text_colore5"
    >
    <LinearLayout
        android:id="@+id/handle_ll"
        android:layout_margin="@dimen/dp_10"
        android:paddingTop="@dimen/space_14"
        android:paddingBottom="@dimen/space_14"
        android:paddingRight="@dimen/space_14"
        android:paddingLeft="@dimen/dp_17"
        android:background="@drawable/shape_white_solid_round_ten"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/dangerous_address"
            style="@style/text_12sp_color65"
            android:text="【危险区域报警】"
            />
        <TextView
            android:id="@+id/dangerous_content"
            style="@style/text_14sp_color28"
            android:layout_marginTop="@dimen/dp_10"
            android:lineSpacingExtra="@dimen/dp_2"
            />
        <RelativeLayout
            android:layout_marginTop="@dimen/dp_15"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/dangerous_time"
                android:layout_centerVertical="true"
                style="@style/text_12sp_color65"
                android:layout_gravity="left"
                android:visibility="gone"
                android:text="2016-7-12 11:01"
                />
            <TextView
                android:id="@+id/handle_person"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                style="@style/text_12sp_color65"
                android:layout_gravity="left"
                />
            <TextView
                android:id="@+id/handle_btn"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_width="73dp"
                android:layout_height="24dp"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_14"
                android:layout_gravity="right"
                android:text="我来处理"
                android:visibility="gone"
                android:background="@drawable/shape_red_solid"
                />
        </RelativeLayout>

    </LinearLayout>
</LinearLayout>