<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/light_gray"
    android:layout_height="match_parent"
    >
    <TextView
        android:id="@+id/view"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_13"
        android:background="@color/text_colore5"
        />
    <TextView
        android:id="@+id/date_tv"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_35"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/dp_42"
        android:background="@color/text_colord2"
        android:textSize="@dimen/sp_14"
        android:textColor="@color/text_color65"
    />
    <LinearLayout
        android:background="@color/white"
        android:layout_marginTop="@dimen/space_13"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <TextView
            android:layout_width="@dimen/dp_12"
            android:layout_height="match_parent"
            android:background="@color/title_background_red"
            />
        <LinearLayout
            android:paddingTop="@dimen/dp_10"
            android:paddingRight="@dimen/dp_10"
            android:paddingLeft="@dimen/dp_15"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <TextView
                android:id="@+id/content_tv"
                android:textColor="@color/text_color28"
                android:textSize="@dimen/sp_14"
                android:lineSpacingExtra="@dimen/dp_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
            <include layout="@layout/bottom_left_right"/>
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:id="@+id/tvs"
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_13"
        android:background="@color/text_colore5"
        android:visibility="gone"
        />
</LinearLayout>