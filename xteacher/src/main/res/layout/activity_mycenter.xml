<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightest_gray"
    android:orientation="vertical">
    <include layout="@layout/title_bar"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_90"
                android:background="@color/white"
                android:orientation="horizontal"
                >
                <TextView
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_weight="8"
                    android:text="@string/head_portrait"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/sp14" />
                <com.zjhz.teacher.ui.view.CircleImageView
                    android:id="@+id/user_head"
                    android:layout_width="@dimen/dp_65"
                    android:layout_height="@dimen/dp_65"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="@dimen/dp_15"
                    android:clickable="true"
                    android:onClick="change_head"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/mine_header" />

                <ImageView
                    android:id="@+id/entv0"
                    style="@style/me_iv"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="0.2"
                    />

            </LinearLayout>
            <View
                style="@style/me_view"
                />
            <RelativeLayout
                android:id="@+id/nick_rl"
                style="@style/me_rl"
                android:visibility="gone"
                >
                <TextView
                    style="@style/me_text"
                    android:text="@string/pet_name" />
                <ImageView
                    android:id="@+id/entv"
                    style="@style/me_iv"
                    />
                <TextView
                    android:id="@+id/nick_tv"
                    style="@style/right_text"
                    android:layout_toLeftOf="@id/entv"
                    android:text="@string/test"
                    />
            </RelativeLayout>
            <View
                style="@style/me_view"
                />
            <RelativeLayout
                android:id="@+id/name_rl"
                style="@style/me_rl"
                android:layout_marginTop="@dimen/dp_20"
                >
                <TextView
                    style="@style/me_text"
                    android:text="@string/name" />
                <ImageView
                    android:id="@+id/entv1"
                    style="@style/me_iv"
                    android:visibility="gone"
                    />
                <TextView
                    android:id="@+id/name_tv"
                    style="@style/right_text"
                    android:layout_alignParentRight="true"
                    android:layout_toLeftOf="@id/entv1"
                    />
            </RelativeLayout>
            <View
                style="@style/me_view"
                />
            <RelativeLayout
                android:id="@+id/sex_rl"
                style="@style/me_rl"
                >
                <TextView
                    style="@style/me_text"
                    android:text="@string/sex" />
                <ImageView
                    android:id="@+id/entv2"
                    style="@style/me_iv"
                    android:visibility="invisible"
                    />
                <TextView
                    android:id="@+id/sex_tv"
                    style="@style/right_text"
                    android:layout_alignParentRight="true"
                    android:layout_toLeftOf="@id/entv2"
                    />
            </RelativeLayout>
            <View
                style="@style/me_view"
                />
            <RelativeLayout
                android:id="@+id/account_rl"
                style="@style/me_rl"
                >
                <TextView
                    style="@style/me_text"
                    android:text="@string/accounts" />
                <TextView
                    android:id="@+id/account_tv"
                    style="@style/right_text"
                    android:layout_alignParentRight="true"
                    />
            </RelativeLayout>
            <View
                style="@style/me_view"
                />
            <RelativeLayout
                android:id="@+id/phone_rl"
                style="@style/me_rl"
                >
                <TextView
                    style="@style/me_text"
                    android:text="@string/phone_number" />
                <ImageView
                    android:id="@+id/entv3"
                    style="@style/me_iv"
                    android:visibility="invisible"
                    />
                <TextView
                    android:id="@+id/phone_tv"
                    style="@style/right_text"
                    android:layout_alignParentRight="true"
                    />
            </RelativeLayout>
            <View
                style="@style/me_view"
                />
            <RelativeLayout
                android:id="@+id/schoolname_rl"
                style="@style/me_rl"
                >
                <TextView
                    style="@style/me_text"
                    android:text="@string/my_school" />
                <TextView
                    android:id="@+id/school_name_tv"
                    style="@style/right_text"
                    android:layout_toLeftOf="@+id/entv4"
                    />
                <ImageView
                    android:id="@+id/entv4"
                    style="@style/me_iv"
                    android:layout_alignParentRight="true"
                    />
            </RelativeLayout>
            <View
                style="@style/me_view"
                />
            <RelativeLayout
                android:id="@+id/department_rl"
                style="@style/me_rl"
                >
                <TextView
                    style="@style/me_text"
                    android:text="@string/department" />
                <TextView
                    android:id="@+id/dept_name_tv"
                    style="@style/right_text"
                    android:layout_alignParentRight="true"
                    />
            </RelativeLayout>
            <View
                style="@style/me_view"
                />
            <RelativeLayout
                android:id="@+id/number_rl"
                style="@style/me_rl"
                >
                <TextView
                    style="@style/me_text"
                    android:text="@string/the_number_of_staff" />
                <TextView
                    android:id="@+id/jobnumber_tv"
                    style="@style/right_text"
                    android:layout_alignParentRight="true"
                    />
            </RelativeLayout>

            <View style="@style/me_view" />
            <RelativeLayout
                android:id="@+id/env_layout"
                style="@style/me_rl">

                <TextView
                    style="@style/me_text"
                    android:text="环境" />

                <TextView
                    android:id="@+id/env_text"
                    style="@style/right_text"
                    android:layout_alignParentRight="true" />
            </RelativeLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>