<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/leave_more_btn"
    android:layout_width="@dimen/dp_130"
    android:layout_height="wrap_content"
    android:layout_alignParentRight="true"
    android:layout_marginRight="@dimen/dp_6"
    android:background="@mipmap/leave_add_d"
    android:gravity="left"
    android:orientation="vertical"
    android:visibility="visible"
    android:paddingLeft="@dimen/dp_1"
    android:paddingRight="@dimen/dp_1"
    android:layout_marginTop="@dimen/dp_55"
    android:padding="@dimen/dp_0">


    <TextView
        android:id="@+id/leave_add_tv"
        android:layout_width="@dimen/dp_130"
        android:layout_height="wrap_content"
        android:drawableLeft="@mipmap/work_side"
        android:drawablePadding="@dimen/dp_15"
        android:paddingLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_10"
        android:paddingTop="@dimen/dp_18"
        android:paddingBottom="@dimen/dp_4"
        android:text="@string/screen"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_16" />

    <View  android:layout_height="1px"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/dp_4"
        android:background="#7e7e7e" />

    <TextView
        android:id="@+id/leave_side_tv"
        android:layout_width="@dimen/dp_130"
        android:layout_height="wrap_content"
        android:drawableLeft="@mipmap/work_delete"
        android:drawablePadding="@dimen/dp_17"
        android:paddingLeft="@dimen/dp_15"
        android:paddingTop="@dimen/dp_12"
        android:layout_marginRight="@dimen/dp_10"
        android:paddingBottom="@dimen/dp_8"
        android:text="@string/cut_off"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_16"  />

</LinearLayout>