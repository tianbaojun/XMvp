<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.zjhz.teacher.ui.view.CircleImageView
        android:id="@+id/adapter_food_detail_list_imageview"
        android:layout_width="@dimen/linkman_fragment_height"
        android:layout_height="@dimen/linkman_fragment_height"
        android:contentDescription="@null"
        android:layout_centerVertical="true"
        android:background="@mipmap/ic_launcher"
        app:border_color="@color/transparent"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_8"
        app:border_width="@dimen/dp_0" />

    <TextView
        android:id="@+id/adapter_food_detail_list_name"
        android:layout_toRightOf="@+id/adapter_food_detail_list_imageview"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="倩倩"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/adapter_food_detail_list_time"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="倩倩"/>

    <TextView
        android:id="@+id/adapter_food_detail_list_description"
        android:layout_toRightOf="@+id/adapter_food_detail_list_imageview"
        android:layout_below="@+id/adapter_food_detail_list_name"
        android:layout_marginTop="@dimen/dp_3"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="倩倩"/>

</RelativeLayout>
