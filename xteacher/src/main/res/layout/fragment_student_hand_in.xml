<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/dp_10"
        android:orientation="horizontal"
        android:visibility="gone">
        <EditText
            android:id="@+id/search_student_ed"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginRight="@dimen/dp_20"
            android:layout_marginLeft="@dimen/dp_20"
            android:paddingLeft="@dimen/dp_15"
            android:paddingRight="@dimen/dp_10"
            android:paddingTop="@dimen/dp_6"
            android:paddingBottom="@dimen/dp_6"
            android:hint="\t输入学生姓名"
            android:drawableLeft="@mipmap/search_icon"
            android:background="@drawable/search_ed_bg"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/gray4"
            android:imeOptions="actionSearch"
            android:maxLines="1"
            android:singleLine="true"/>
        <TextView
            android:id="@+id/student_search_cancel"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/dp_20"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/dp_10"
            android:paddingRight="@dimen/dp_10"
            android:text="取消"
            android:textColor="@color/title_background_red"
            android:visibility="invisible"/>
    </LinearLayout>

    <ExpandableListView
        android:id="@+id/student_expand_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/dp_10"
        android:dividerHeight="@dimen/dp_1"
        android:divider="#00000000"
        android:groupIndicator="@null"/>

    <ListView
        android:id="@+id/student_list_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:dividerHeight="@dimen/dp_1"
        android:divider="#00000000"/>
</LinearLayout>