<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_class_and_grade_education_list_drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.zjhz.teacher.ui.activity.ClassAndGradeEducationListActivity">

    <LinearLayout
        android:id="@+id/layout_class_moral"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/title_bar" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_45"
            android:background="@color/text_colore5">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/grade_title"
                android:textSize="@dimen/sp14"
                android:id="@+id/textView10" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.5"
                android:gravity="center"
                android:text="@string/check_plan"
                android:textSize="@dimen/sp14" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="center"
                android:text="@string/date"
                android:textSize="@dimen/sp14"
                android:id="@+id/textView9" />
        </LinearLayout>
        <com.zjhz.teacher.ui.view.RefreshLayout
            android:id="@+id/activity_class_and_grade_education_list_swipe_refresh_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ListView
                android:id="@+id/activity_class_and_grade_education_list_recyclerview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:divider="@null"
                android:clipToPadding="false" />

        </com.zjhz.teacher.ui.view.RefreshLayout>
    </LinearLayout>
    <include layout="@layout/drawer_layout" />

</android.support.v4.widget.DrawerLayout>

