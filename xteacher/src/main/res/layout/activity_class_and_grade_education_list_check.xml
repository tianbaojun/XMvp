<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.zjhz.teacher.ui.activity.ClassAndGradeEducationListCheckActivity">

    <include layout="@layout/title_bar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/text_colore5"
        android:orientation="vertical">

        <!--@string/special_inspection-->
        <TextView
            android:id="@+id/activity_class_and_grade_education_list_check_project"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:gravity="center"
            android:text="请选择德育方案"
            android:textSize="@dimen/sp14"
            android:drawableRight="@mipmap/leave_down"
            android:paddingRight="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@drawable/yuanjiao"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15"/>

        <TextView
            android:id="@+id/activity_class_and_grade_education_list_check_time"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:gravity="center"
            android:text=""
            android:textSize="@dimen/sp14"
            android:drawableRight="@mipmap/leave_down"
            android:paddingRight="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@drawable/yuanjiao"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15"/>

        <TextView
            android:id="@+id/activity_class_and_grade_education_list_check_clazz"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:gravity="center"
            android:text="请选择年级"
            android:textSize="@dimen/sp14"
            android:drawableRight="@mipmap/leave_down"
            android:paddingRight="@dimen/dp_15"
            android:background="@drawable/yuanjiao"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_15"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15"/>
    </LinearLayout>
    <include
        layout="@layout/classandgradelineartitle"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/text_colore5"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.zjhz.teacher.ui.view.ResizeListView
            android:divider="@null"
            android:id="@+id/activity_class_and_grade_education_list_check_list"
            android:layout_above="@+id/activity_class_and_grade_education_list_check_submit"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:listSelector="@color/lightest_gray"/>

        <TextView
            android:id="@+id/activity_class_and_grade_education_list_check_submit"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_20"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_45"
            android:textColor="@color/white"
            android:gravity="center"
            android:text="@string/submit"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15"
            android:background="@drawable/yuanjiao_green"/>
    </RelativeLayout>
</LinearLayout>
