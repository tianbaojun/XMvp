<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical"
    tools:context="com.zjhz.teacher.ui.fragment.homework.HomeworkStatisticsFragment">

    <android.support.design.widget.TabLayout
        android:id="@+id/class_tab"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_8"
        android:background="@color/white"
        app:tabSelectedTextColor="@color/title_background_red"
        app:tabIndicatorColor="@color/title_background_red"
        app:tabTextColor="@color/gray9"
        app:tabMode="scrollable"/>


    <android.support.v4.view.ViewPager
        android:id="@+id/homework_statistics_vp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"/>

</LinearLayout>
