<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_35.5"
    android:background="@color/gray_d"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/student_no_tv"
        android:layout_width="@dimen/dp_0"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:text="编号"
        android:textColor="@color/list_title_text_color"
        android:textSize="@dimen/sp13" />

    <TextView
        android:id="@+id/subject_name_tv"
        android:layout_width="@dimen/dp_0"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:text="课程"
        android:textColor="@color/list_title_text_color"
        android:textSize="@dimen/sp13" />

    <TextView
        android:id="@+id/subject_attendance_tv"
        android:layout_width="@dimen/dp_0"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:text="教师"
        android:textColor="@color/list_title_text_color"
        android:textSize="@dimen/sp13" />

    <TextView
        android:id="@+id/subject_score_tv"
        android:layout_width="@dimen/dp_0"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:text="人数"
        android:textColor="@color/list_title_text_color"
        android:textSize="@dimen/sp13" />
</LinearLayout>