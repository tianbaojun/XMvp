<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_homework_manage_detail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.zjhz.teacher.ui.activity.homework.HomeworkManageDetailActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_43"
        android:orientation="horizontal"
        android:background="@color/title_background_red"
        android:gravity="center_vertical">
        <ImageView
            android:id="@+id/title_back_img"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/dp_15"
            android:paddingRight="@dimen/dp_15"
            android:clickable="true"
            android:src="@mipmap/title_back"
            android:gravity="center"/>
        <TextView
            android:id="@+id/homework_detail_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="布置内容"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_16"
            android:visibility="gone"/>
        <RadioGroup
            android:id="@+id/radio_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="horizontal"
            android:gravity="center"
            android:background="@drawable/yuanjiao_out">
            <RadioButton
                android:id="@+id/radio_bznr"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/dp_5"
                android:paddingRight="@dimen/dp_5"
                android:paddingTop="@dimen/dp_2"
                android:paddingBottom="@dimen/dp_2"
                android:gravity="center"
                android:text="布置内容"
                android:textColor="@color/title_background_red"
                android:textSize="@dimen/sp_16"
                android:button="@null"
                android:checked="true"
                android:background="@drawable/radio_left"/>
            <RadioButton
                android:id="@+id/radio_xssj"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/dp_2"
                android:layout_marginBottom="@dimen/dp_2"
                android:paddingLeft="@dimen/dp_5"
                android:paddingRight="@dimen/dp_5"
                android:paddingTop="@dimen/dp_2"
                android:paddingBottom="@dimen/dp_2"
                android:gravity="center"
                android:text="学生上交"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_16"
                android:button="@null"
                android:background="@drawable/radio_center"/>
            <RadioButton
                android:id="@+id/radio_zytj"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingTop="@dimen/dp_2"
                android:paddingBottom="@dimen/dp_2"
                android:gravity="center"
                android:text="作业统计"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_16"
                android:button="@null"
                android:background="@drawable/radio_rigth"/>
        </RadioGroup>
        <TextView
            android:id="@+id/homework_wj"
            android:layout_width="@dimen/dp_60"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:text="完结"
            android:textSize="@dimen/sp_16"
            android:textColor="@color/white"/>
    </RelativeLayout>
    <android.support.v4.view.ViewPager
        android:id="@+id/homework_detail_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background"/>

</LinearLayout>
