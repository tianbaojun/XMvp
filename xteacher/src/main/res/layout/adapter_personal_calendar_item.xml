<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_40"
    android:background="@drawable/item_selector_backgroud"
    android:gravity="center_vertical">
    
    <ImageView
        android:id="@+id/adapter_personal_calendar_item_image"
        android:layout_width="@dimen/dp_0"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center" />

    <TextView
        android:id="@+id/adapter_personal_calendar_item_content"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_40"
        android:layout_weight="5"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/dp_15" />

    <RelativeLayout
        android:layout_width="@dimen/dp_0"
        android:layout_height="@dimen/dp_40"
        android:layout_weight="2">

        <TextView
            android:id="@+id/adapter_personal_calendar_item_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center" />

        <ImageView
            android:id="@+id/adapter_personal_calendar_item_image_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/adapter_personal_calendar_item_time"
            android:layout_centerHorizontal="true"
            android:src="@mipmap/person_remark" />

    </RelativeLayout>

</LinearLayout>
