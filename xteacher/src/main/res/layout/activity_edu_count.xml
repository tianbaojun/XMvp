<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/education_background"
    android:orientation="vertical">

    <include layout="@layout/title_bar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:background="@color/education_background"
        android:orientation="horizontal"
        android:padding="@dimen/dp_5"
        android:paddingBottom="@dimen/dp_10"
        android:paddingTop="@dimen/dp_10">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/dp_5"
            android:scaleType="centerCrop"
            android:src="@mipmap/education_count" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="@string/education_count"
            android:textColor="@color/education_count"
            android:textSize="@dimen/space_13" />

        <RelativeLayout
            android:id="@+id/grade_rl"
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_5"
            android:layout_weight="1"
            android:background="@drawable/btn_rectangle_shape_education"
            android:padding="@dimen/dp_4">

            <TextView
                android:id="@+id/grade"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_10"
                android:background="@color/white"
                android:text="@string/please_choose_class"
                android:textSize="@dimen/sp12" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_10"
                android:background="@color/white"
                android:scaleType="centerInside"
                android:src="@mipmap/education_new_select" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/term_rl"
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_5"
            android:layout_weight="1"
            android:background="@drawable/btn_rectangle_shape_education"
            android:padding="@dimen/dp_4">

            <TextView
                android:id="@+id/term"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_10"
                android:background="@color/white"
                android:text="@string/please_choose_month_term"
                android:textSize="@dimen/sp12" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_10"
                android:background="@color/white"
                android:scaleType="centerInside"
                android:src="@mipmap/education_new_select" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_30"
        android:layout_marginBottom="@dimen/dp_5"
        android:background="@color/education_type_background"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/type_num"
            android:layout_width="@dimen/dp_0"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/education_num"
            android:textSize="@dimen/sp12" />

        <TextView
            android:id="@+id/type_grade"
            android:layout_width="@dimen/dp_0"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/education_grade"
            android:textSize="@dimen/sp12" />

        <LinearLayout

            android:id="@+id/type_grade_check_ll"
            android:layout_width="@dimen/dp_0"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <TextView
                android:id="@+id/type_grade_check"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/education_grade_check"
                android:textSize="@dimen/sp12" />

            <ImageView
                android:id="@+id/type_grade_check_image"
                android:layout_width="@dimen/dp_5"
                android:layout_height="@dimen/dp_10"
                android:scaleType="fitXY"
                android:src="@mipmap/sort"/>
        </LinearLayout>

        <LinearLayout

            android:id="@+id/type_person_check_ll"
            android:layout_width="@dimen/dp_0"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <TextView
                android:id="@+id/type_person_check"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/education_person_check"
                android:textSize="@dimen/sp12" />

            <ImageView
                android:id="@+id/type_person_check_image"
                android:layout_width="@dimen/dp_5"
                android:layout_height="@dimen/dp_10"
                android:scaleType="fitXY"
                android:src="@mipmap/sort"/>
        </LinearLayout>

        <LinearLayout

            android:id="@+id/type_total_ll"
            android:layout_width="@dimen/dp_0"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <TextView
                android:id="@+id/type_total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/education_total"
                android:textSize="@dimen/sp12" />

            <ImageView
                android:id="@+id/type_total_image"
                android:layout_width="@dimen/dp_5"
                android:layout_height="@dimen/dp_10"
                android:scaleType="fitXY"
                android:src="@mipmap/sort"/>
        </LinearLayout>

    </LinearLayout>

    <include layout="@layout/refresh_layout"/>


</LinearLayout>