<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background"
    tools:context="pro.ui.activity.xkgl.activity.LessonRecordActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_43"
        android:background="@color/title_background_red">

        <TextView
            android:id="@+id/title_back_img"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:clickable="true"
            android:drawableLeft="@mipmap/title_back"
            android:gravity="center"
            android:paddingLeft="@dimen/dp_15"
            android:paddingRight="@dimen/dp_15"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_16"
            android:visibility="visible" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_centerInParent="true"
            android:background="@drawable/yuanjiao_out"
            android:padding="@dimen/dp_2"
            android:layout_height="@dimen/dp_30">
            <TextView
                android:id="@+id/charge_lesson_record"
                android:text="课堂记录"
                android:textSize="@dimen/sp14"
                android:layout_width="@dimen/dp_0"
                android:gravity="center"
                android:textColor="@color/main_bottom_text_color"
                android:layout_height="match_parent"
                android:background="@drawable/yuanjiao_message_white"
                android:layout_weight="1"
                android:maxLines="1"
                android:paddingLeft="@dimen/dp_5"
                android:paddingRight="@dimen/dp_5"/>

            <TextView
                android:id="@+id/charge_lesson_list"
                android:layout_width="@dimen/dp_0"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/rec_contacts"
                android:gravity="center"
                android:text="课程归集"
                android:textColor="@color/white"
                android:textSize="@dimen/sp14"
                android:paddingLeft="@dimen/dp_5"
                android:paddingRight="@dimen/dp_5" />

            <TextView
                android:id="@+id/student_lesson_record"
                android:layout_width="@dimen/dp_0"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/yuanjiao_contacts"
                android:gravity="center"
                android:text="学生归集"
                android:textColor="@color/white"
                android:textSize="@dimen/sp14"
                android:paddingLeft="@dimen/dp_5"
                android:paddingRight="@dimen/dp_5" />
        </LinearLayout>
    </RelativeLayout>
   <android.support.v4.view.ViewPager
       android:id="@+id/viewpager"
       android:layout_width="match_parent"
       android:layout_height="match_parent"/>

</LinearLayout>
