<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:orientation="vertical"
    android:layout_height="wrap_content"
    android:background="@drawable/item_selector_backgroud">

    <!--@color/schedule_griditems_bg-->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_90"
        android:gravity="center"
        android:background="@drawable/schedule_bg_gv">

        <!--android:background="@drawable/schedule_bg_gv"-->
            <ImageView
                android:id="@+id/adapter_home_image"
                android:layout_width="@dimen/dp_25"
                android:layout_height="@dimen/dp_25"
                android:scaleType="fitXY"
                android:layout_centerHorizontal="true" />

            <TextView
                android:id="@+id/adapter_home_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_5"
                android:textSize="@dimen/sp12"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/adapter_home_image"/>

    </RelativeLayout>

</RelativeLayout>
