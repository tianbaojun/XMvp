<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_classz_moments_upload_file_with_web"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="pro.ui.activity.ClasszMomentsUploadFileWithWebActivity">

    <include layout="@layout/title_bar" />

    <ImageView
        android:id="@+id/upload_status"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_140"
        android:background="@color/white"
        android:scaleType="centerCrop"
        android:src="@mipmap/classz_moments_upload_document_with_web_wait" />

    <LinearLayout
        android:id="@+id/before"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/dp_30">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_20"
                android:layout_marginRight="@dimen/dp_10"
                android:background="@drawable/circle_green"
                android:gravity="center"
                android:text="@string/activity_classz_moments_upload_file_with_web_one" />

            <TextView
                android:id="@+id/url_hint"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/activity_classz_moments_upload_file_with_web_please_input_in_web_broswer" />
        </LinearLayout>

        <TextView
            android:id="@+id/url"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp_5"
            android:layout_marginTop="@dimen/dp_20"
            android:background="@drawable/btn_rectangle_shape_education"
            android:gravity="center"
            android:text="http://www.1000xyun.com/doc.html"
            android:textColor="@color/title_background_red"
            android:textSize="@dimen/sp17"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/sp20">

            <TextView
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_20"
                android:layout_marginRight="@dimen/dp_10"
                android:background="@drawable/circle_green"
                android:gravity="center"
                android:text="@string/activity_classz_moments_upload_file_with_web_two" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/activity_classz_moments_upload_file_with_web_please_input_following_number" />
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="@dimen/dp_20"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_30"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/check_code"
                android:layout_width="@dimen/dp_0"
                android:layout_height="match_parent"
                android:layout_weight="7"
                android:background="@drawable/btn_rectangle_shape_education"
                android:gravity="center"
                android:textColor="@color/title_background_red"
                android:textSize="@dimen/sp17"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/refresh_code"
                android:layout_width="@dimen/dp_0"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:background="@drawable/btn_rectangle_shape_education"
                android:gravity="center"
                android:layout_marginLeft="@dimen/dp_10"
                android:text="@string/activity_classz_moments_upload_file_with_web_refresh_code"
                android:textStyle="bold" />

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_20"
            android:text="@string/activity_classz_moments_upload_file_with_web_refresh_hint"/>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/after"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:background="@color/classz_moments_add_document_attachment_background"
        android:layout_toLeftOf="@+id/document_label"
        android:padding="@dimen/dp_5"
        android:visibility="gone">


        <ImageView
            android:id="@+id/document_icon"
            android:layout_width="@dimen/dp_60"
            android:layout_height="@dimen/dp_60"
            android:padding="@dimen/dp_5"
            android:layout_marginRight="@dimen/dp_20"
            android:src="@mipmap/classz_moments_add_document_word_icon" />


        <ImageView
            android:id="@+id/cancel"
            android:layout_width="@dimen/dp_10"
            android:layout_height="@dimen/dp_10"
            android:src="@mipmap/delete"/>

        <TextView
            android:id="@+id/document_name"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_60"
            android:textSize="@dimen/sp20"
            android:layout_toRightOf="@id/document_icon"
            android:layout_toLeftOf="@+id/submit"/>

        <TextView
            android:id="@+id/submit"
            android:layout_width="@dimen/dp_60"
            android:layout_height="@dimen/dp_60"
            android:layout_alignParentRight="true"
            android:text="上传"
            android:gravity="center"
            android:background="@color/title_background_red"
            android:textColor="@color/white"/>


    </RelativeLayout>


</LinearLayout>
