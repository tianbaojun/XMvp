<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_30"
        android:background="@null"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/adapter_child_leave_content_knob"
            style="@style/fly_text_common_course_arrangement"
            android:layout_width="@dimen/dp_0"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:gravity="center"
            android:text="节次"
            android:textColor="@color/text_color32" />

        <TextView
            android:id="@+id/adapter_child_leave_content_subject"
            style="@style/fly_text_common_course_arrangement"
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:gravity="center"
            android:text="科目"
            android:textColor="@color/text_color32" />

        <TextView
            android:id="@+id/adapter_child_leave_content_class"
            style="@style/fly_text_common_course_arrangement"
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1.3"
            android:gravity="center"
            android:text="班级" />

        <TextView
            android:id="@+id/adapter_child_leave_content_substitute_tipsay"
            style="@style/fly_text_common_course_arrangement"
            android:layout_width="@dimen/dp_0"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:drawableLeft="@mipmap/substitute_teacher"
            android:drawablePadding="@dimen/space_10"
            android:text=""
            android:textColor="@color/text_color32" />
    </LinearLayout>
</LinearLayout>
