<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:background="@color/color_f2"
        android:layout_gravity="center"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        >
        <RelativeLayout
            android:background="@color/title_background_red"
            android:layout_width="wrap_content"
            android:layout_height="26dp">
            <TextView
                android:onClick="onCancle"
                android:clickable="true"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="取消"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_12"
                android:layout_centerVertical="true"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="发送成绩"
                android:gravity="center"
                android:textSize="@dimen/sp_14"
                android:textColor="@color/white"
                android:layout_centerInParent="true"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_marginTop="15dp"
                    android:orientation="horizontal"
                    android:layout_marginRight="25dp"
                    android:layout_marginLeft="25dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_color28"
                        android:textSize="@dimen/sp_12"
                        android:text="分制设定:"
                        android:layout_gravity="center_vertical"
                        />
                    <RelativeLayout
                        android:id="@+id/score_type_rl"
                        android:onClick="onSelectType"
                        android:clickable="true"
                        android:layout_width="match_parent"
                        android:layout_height="27dp"
                        android:background="@drawable/shape_white_solid_gray_storke">
                        <TextView
                            android:id="@+id/type"
                            android:hint="请选择"
                            android:textSize="@dimen/sp_12"
                            android:textColorHint="@color/text_colord2"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:textColor="@color/text_color28"
                            android:gravity="center"
                            android:layout_centerInParent="true"
                            />
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="8dp"
                            android:src="@mipmap/down_icon"/>
                    </RelativeLayout>
                </LinearLayout>
                <RelativeLayout
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="25dp"
                    android:layout_marginLeft="25dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_alignParentLeft="true"
                        android:id="@+id/max_ll"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:id="@+id/max_iv"
                            android:onClick="onMax"
                            android:clickable="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/score_select"
                            />
                        <TextView
                            android:id="@+id/max_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/text_color28"
                            android:text="最高分：108"
                            android:textSize="@dimen/sp_12"
                            android:layout_marginLeft="8dp"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:gravity="center"
                        android:layout_alignParentRight="true"
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:id="@+id/min_iv"
                            android:onClick="onMin"
                            android:clickable="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/score_select"
                            />
                        <TextView
                            android:id="@+id/min_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/text_color28"
                            android:text="最低分：108"
                            android:textSize="@dimen/sp_12"
                            android:layout_marginLeft="8dp"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:gravity="center"
                        android:layout_alignParentLeft="true"
                        android:layout_below="@id/max_ll"
                        android:layout_marginTop="20dp"
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:id="@+id/avg_iv"
                            android:onClick="onAvg"
                            android:clickable="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/score_select"
                            />
                        <TextView
                            android:id="@+id/avg_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/text_color28"
                            android:text="平均分：108"
                            android:textSize="@dimen/sp_12"
                            android:layout_marginLeft="8dp"
                            />
                    </LinearLayout>
                </RelativeLayout>
                <TextView
                    android:onClick="onSure"
                    android:clickable="true"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="15dp"
                    android:textSize="@dimen/sp14"
                    android:text="确定"
                    android:layout_gravity="center_horizontal"
                    android:textColor="@color/text_color65"
                    android:layout_width="75dp"
                    android:layout_height="31dp"
                    android:gravity="center"
                    android:background="@drawable/shape_white_solid_gray_storke"
                    />
            </LinearLayout>
            <ListView
                android:id="@+id/type_lv"
                android:layout_marginTop="42dp"
                android:layout_marginLeft="85dp"
                android:layout_marginRight="25dp"
                android:visibility="invisible"
                android:listSelector="@color/lightest_gray"
                android:divider="@null"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>

