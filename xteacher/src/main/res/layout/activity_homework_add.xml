<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_homework_add"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical"
    tools:context="com.zjhz.teacher.ui.activity.homework.HomeworkAddActivity">
    <include layout="@layout/title_bar"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/homework_title"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_45"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/dp_20"
                android:paddingRight="@dimen/dp_20"
                android:layout_marginTop="@dimen/dp_8"
                android:background="@color/white">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:textColor="@color/gray3"
                    android:textSize="@dimen/sp_14"
                    android:text="作业标题" />
                <EditText
                    android:id="@+id/homework_title_ed"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:maxLines="1"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:textColor="@color/gray6"
                    android:textSize="@dimen/sp_14"
                    android:hint="请输入标题"
                    android:background="@null"
                    android:inputType="text"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="@dimen/dp_20"
                android:paddingRight="@dimen/dp_20"
                android:layout_marginTop="@dimen/dp_8"
                android:background="@color/white">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_45"
                    android:gravity="center_vertical"
                    android:textColor="@color/gray3"
                    android:textSize="@dimen/sp_14"
                    android:text="所属科目"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:background="@color/gray_d"/>
                <com.zjhz.teacher.ui.view.ScrollViewWithGridView
                    android:id="@+id/homework_subject_grid"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:numColumns="4" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="@dimen/dp_20"
                android:paddingRight="@dimen/dp_20"
                android:layout_marginTop="@dimen/dp_8"
                android:background="@color/white">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_45"
                    android:gravity="center_vertical"
                    android:textColor="@color/gray3"
                    android:textSize="@dimen/sp_14"
                    android:text="针对班级"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:background="@color/gray_d"/>
                <com.zjhz.teacher.ui.view.ScrollViewWithGridView
                    android:id="@+id/homework_class_grid"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:numColumns="4" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_45"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/dp_20"
                android:paddingRight="@dimen/dp_20"
                android:layout_marginTop="@dimen/dp_8"
                android:background="@color/white">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:textColor="@color/gray3"
                    android:textSize="@dimen/sp_14"
                    android:text="作业时长"/>
                <EditText
                    android:id="@+id/homework_duration"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical|right"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:layout_marginRight="@dimen/dp_20"
                    android:singleLine="true"
                    android:inputType="number"
                    android:textColor="@color/gray6"
                    android:textSize="@dimen/sp_14"
                    android:hint="请输入时长"
                    android:background="@null"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:textColor="@color/gray3"
                    android:textSize="@dimen/sp_14"
                    android:text="分"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/homework_form_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="@dimen/dp_20"
                android:paddingRight="@dimen/dp_20"
                android:layout_marginTop="@dimen/dp_8"
                android:background="@color/white">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_45"
                    android:gravity="center_vertical"
                    android:textColor="@color/gray3"
                    android:textSize="@dimen/sp_14"
                    android:text="作业形式"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:background="@color/gray_d"/>
                <LinearLayout
                    android:id="@+id/homework_form_layout"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_45"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">
                    <LinearLayout
                        android:id="@+id/qwz_layout"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center">
                        <TextView
                            android:id="@+id/qwz_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="全文字"
                            android:textSize="@dimen/sp_14"
                            android:textColor="@color/gray6" />
                        <ImageView
                            android:id="@+id/qwz_img"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/homework_icon_select"
                            android:visibility="invisible"/>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/zp_layout"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/zp_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="图片"
                            android:textSize="@dimen/sp_14"
                            android:textColor="@color/gray6" />

                        <ImageView
                            android:id="@+id/zp_img"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/homework_icon_select"
                            android:visibility="invisible"/>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/twjh_layout"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center">
                        <TextView
                            android:id="@+id/twjh_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="图文结合"
                            android:textSize="@dimen/sp_14"
                            android:textColor="@color/title_background_red" />
                        <ImageView
                            android:id="@+id/twjh_img"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/homework_icon_select"
                            android:visibility="visible"/>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/yy_layout"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:visibility="visible">
                        <TextView
                            android:id="@+id/yy_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="语音"
                            android:textSize="@dimen/sp_14"
                            android:textColor="@color/gray6" />
                        <ImageView
                            android:id="@+id/yy_img"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/homework_icon_select"
                            android:visibility="invisible"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_45"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/dp_20"
                android:paddingRight="@dimen/dp_20"
                android:layout_marginTop="@dimen/dp_8"
                android:background="@color/white">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:textColor="@color/gray3"
                    android:textSize="@dimen/sp_14"
                    android:text="截止上交时间"/>
                <TextView
                    android:id="@+id/deadline_tv"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical|right"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:layout_marginRight="@dimen/dp_20"
                    android:textColor="@color/gray6"
                    android:textSize="@dimen/sp_14"
                    android:text="请选择时间"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/arrow_right"/>
            </LinearLayout>

            <EditText
                android:id="@+id/homework_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="@dimen/dp_130"
                android:layout_marginTop="@dimen/dp_8"
                android:gravity="top"
                android:paddingTop="@dimen/dp_10"
                android:paddingLeft="@dimen/dp_20"
                android:paddingRight="@dimen/dp_20"
                android:textColor="@color/gray6"
                android:textSize="@dimen/sp_14"
                android:hint="请输入作业要求（文字不能超过200字）"
                android:background="@color/white"/>

            <com.zjhz.teacher.ui.view.images.view.PicturesPreviewer
                android:id="@+id/homework_picture"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_8"
                android:paddingLeft="@dimen/dp_20"
                android:paddingRight="@dimen/dp_20"
                android:background="@color/white"/>
            <CheckBox
                android:id="@+id/sync_czda"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_30"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginBottom="@dimen/dp_30"
                android:layout_marginLeft="@dimen/dp_20"
                android:text="同步到成长档案"
                android:textColor="@color/gray6"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>

