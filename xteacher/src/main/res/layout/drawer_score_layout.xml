<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_gravity="end"
    android:id="@+id/score_drawer_layout"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/navigation_header"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_5"
        android:background="@color/text_colore5"
        />
    <ScrollView
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_marginBottom="@dimen/dp_10"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:id="@+id/drawer_layout_years"
                style="@style/fly_ll_common_itme"
                android:orientation="horizontal" >
                <TextView
                    style="@style/fly_text_common"
                    android:layout_width="@dimen/dp_0"
                    android:layout_weight="3"
                    android:textColor="@color/text_color32"
                    android:text="@string/school_year" />
                <TextView
                    android:id="@+id/years_tvs"
                    style="@style/fly_text_common"
                    android:layout_width="@dimen/dp_0"
                    android:layout_weight="3"
                    android:gravity="center"
                    android:textColor="@color/text_color32"/>
                <ImageView
                    android:id="@+id/years_iv"
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@mipmap/work_arrow" />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/text_colore5"
                />
            <LinearLayout
                android:id="@+id/drawer_layout_term"
                style="@style/fly_ll_common_itme"
                android:orientation="horizontal" >
                <TextView
                    style="@style/fly_text_common"
                    android:layout_width="@dimen/dp_0"
                    android:layout_weight="3"
                    android:textColor="@color/text_color32"
                    android:text="@string/Semester" />
                <TextView
                    android:id="@+id/term_tvs"
                    style="@style/fly_text_common"
                    android:layout_width="@dimen/dp_0"
                    android:layout_weight="3"
                    android:gravity="center"
                    android:textColor="@color/text_color32"/>
                <ImageView
                    android:id="@+id/enter_iv"
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@mipmap/work_arrow" />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="@color/text_colore5"
                />
            <LinearLayout
                android:id="@+id/drawer_layout_score"
                style="@style/fly_ll_common_itme"
                android:layout_marginTop="@dimen/dp_1"
                android:orientation="horizontal" >

                <TextView
                    style="@style/fly_text_common"
                    android:layout_width="@dimen/dp_0"
                    android:layout_weight="3"
                    android:textColor="@color/text_color32"
                    android:text="@string/grade_type" />
                <TextView
                    android:id="@+id/score_type_tv"
                    style="@style/fly_text_common"
                    android:layout_width="@dimen/dp_0"
                    android:layout_weight="3"
                    android:gravity="center"
                    android:textColor="@color/text_color32" />
                <ImageView
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@mipmap/work_arrow" />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="@color/text_colore5"
                />
            <LinearLayout
                android:id="@+id/drawer_layout_subject"
                style="@style/fly_ll_common_itme"
                android:layout_marginTop="@dimen/dp_1"
                android:orientation="horizontal" >
                <TextView
                    style="@style/fly_text_common"
                    android:layout_width="@dimen/dp_0"
                    android:layout_weight="3"
                    android:textColor="@color/text_color32"
                    android:text="@string/work_manager_two" />
                <TextView
                    android:id="@+id/subject_name"
                    style="@style/fly_text_common"
                    android:layout_width="@dimen/dp_0"
                    android:layout_weight="3"
                    android:gravity="center"
                    android:textColor="@color/text_color32" />
                <ImageView
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@mipmap/work_arrow" />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="@color/text_colore5"
                />
            <LinearLayout
                android:id="@+id/drawer_layout_class"
                style="@style/fly_ll_common_itme"
                android:layout_marginTop="@dimen/dp_1"
                android:visibility="visible"
                android:orientation="horizontal" >

                <TextView
                    style="@style/fly_text_common"
                    android:layout_width="@dimen/dp_0"
                    android:layout_weight="3"
                    android:textColor="@color/text_color32"
                    android:text="@string/work_manager_one" />
                <TextView
                    android:id="@+id/class_tv"
                    style="@style/fly_text_common"
                    android:layout_width="@dimen/dp_0"
                    android:layout_weight="3"
                    android:gravity="center"
                    android:textColor="@color/text_color32" />
                <ImageView
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@mipmap/work_arrow" />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="@color/text_colore5"
                />
            <RelativeLayout
                android:id="@+id/drawer_relative"
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/dp_1"
                style="@style/fly_ll_common_itme"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/drawer_layout_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_15"
                    android:textColor="@color/text_color32"
                    android:textSize="@dimen/sp_16"
                    android:text="@string/select_date"/>

                <LinearLayout
                    android:layout_below="@+id/drawer_layout_date"
                    android:layout_marginTop="@dimen/dp_15"
                    android:layout_width="match_parent"
                    android:layout_marginBottom="@dimen/dp_15"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/drawer_layout_date_start"
                        android:layout_width="@dimen/dp_0"
                        android:layout_height="@dimen/dp_45"
                        android:layout_weight="1"
                        android:hint="@string/please_select_start_time"
                        android:clickable="true"
                        android:gravity="center"
                        android:textColor="@color/text_color32"
                        android:background="@drawable/yuanjiao"/>

                    <View
                        android:layout_width="@dimen/dp_0"
                        android:layout_height="match_parent"
                        android:layout_weight="0.5"/>

                    <TextView
                        android:id="@+id/drawer_layout_date_end"
                        android:layout_width="@dimen/dp_0"
                        android:layout_height="@dimen/dp_45"
                        android:layout_weight="1"
                        android:hint="@string/please_select_deadline"
                        android:clickable="true"
                        android:gravity="center"
                        android:textColor="@color/text_color32"
                        android:background="@drawable/yuanjiao"/>
                </LinearLayout>
            </RelativeLayout>
            <TextView
                android:id="@+id/drawer_layout_clear"
                android:layout_width="@dimen/dp_100"
                android:layout_height="@dimen/dp_45"
                android:layout_marginTop="@dimen/dp_35"
                android:clickable="true"
                android:background="@drawable/yuanjiao"
                android:gravity="center"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/drawer_layout_text"
                android:text="@string/clear_options"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>