<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_growth_archives"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background"
    tools:context="com.zjhz.teacher.ui.activity.GrowthArchivesSearchActivity">

    <LinearLayout
        android:id="@+id/title_rl"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_43"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@color/title_background_red">

        <ImageView
            android:id="@+id/title_back_img"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:clickable="true"
            android:src="@mipmap/title_back"
            android:gravity="center"
            android:paddingLeft="@dimen/dp_15"
            android:paddingRight="@dimen/dp_15"
            android:textColor="@color/white" />
        <EditText
            android:id="@+id/growth_search_student_ed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp_30"
            android:layout_marginLeft="@dimen/dp_10"
            android:paddingLeft="@dimen/dp_15"
            android:paddingRight="@dimen/dp_10"
            android:paddingTop="@dimen/dp_6"
            android:paddingBottom="@dimen/dp_6"
            android:hint="\t输入学生姓名"
            android:drawableLeft="@mipmap/search_icon"
            android:background="@drawable/search_ed_bg"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/gray4"
            android:imeOptions="actionSearch"
            android:maxLines="1"
            android:singleLine="true"/>
    </LinearLayout>

    <ExpandableListView
        android:id="@+id/growth_archives_student_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/dp_10"
        android:dividerHeight="@dimen/dp_1"
        android:divider="#00000000"
        android:groupIndicator="@null"/>

    <ListView
        android:id="@+id/student_list_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:dividerHeight="@dimen/dp_1"
        android:divider="#00000000"/>


</LinearLayout>
