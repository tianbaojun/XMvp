<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="checkMsgsBean"
            type="com.zjhz.teacher.NetworkRequests.response.PickUpStudentResBean.CheckMsgsBean"/>
    </data>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/list_tiem">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/dp_10"
        android:src="@mipmap/pick_up_reason"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:textSize="@dimen/sp_14"
        android:textColor="@color/gray6"
        android:layout_marginRight="@dimen/dp_5"
        android:gravity="center"
        android:text="@{checkMsgsBean.nameDesc}"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_marginRight="@dimen/dp_10"
        android:textSize="@dimen/sp_14"
        android:textColor="@color/gray9"
        android:gravity="center_vertical|right"
        android:text="@{checkMsgsBean.checkTime}"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginRight="@dimen/dp_20"
        android:src="@{checkMsgsBean.getAuditPic()}"/>
</LinearLayout>
</layout>