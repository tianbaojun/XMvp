<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/item_selector_backgroud"
    android:paddingRight="@dimen/dp_12"
    android:paddingLeft="@dimen/dp_12">
    <RelativeLayout
        android:id="@+id/select_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <TextView
            android:id="@+id/recevice_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_45"
            android:text="@string/management_department"
            android:gravity="center_vertical"
            android:textSize="@dimen/text_size_16"
            />
        <ImageView
            android:id="@+id/select_true_iv"
            android:visibility="gone"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/select_true"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0.5"
        android:background="@color/light_gray"/>
</LinearLayout>