<?xml version="1.0" encoding="utf-8"?>
<layout>
<data>
    <variable
        name="growthDailyBean"
        type="com.zjhz.teacher.NetworkRequests.response.GrowthDailyBeanRes"/>
    <variable
        name="homeworkshareBean"
        type="com.zjhz.teacher.NetworkRequests.response.HomeworkShareBean"/>
</data>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/dp_20"
        android:paddingRight="@dimen/dp_20"
        android:paddingTop="@dimen/dp_10"
        android:paddingBottom="@dimen/dp_10"
        android:background="@color/white">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/growth_daily_icon"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginLeft="@dimen/dp_15">
                <TextView
                    android:id="@+id/date_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{growthDailyBean.date}"
                    android:textSize="@dimen/sp_14"
                    android:textColor="@color/gray6"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_5"
                    android:background="@drawable/growth_daily_type_shape"
                    android:text="@{growthDailyBean.categoryTitle}"
                    android:textSize="@dimen/sp_12"
                    android:textColor="#f5b65b" />
            </LinearLayout>

            <ImageView
                android:id="@+id/growth_daily_delete"
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_20"
                android:layout_marginRight="@dimen/dp_20"
                android:src="@mipmap/delete1"
                android:layout_gravity="bottom"
                android:visibility="gone"/>

            <ImageView
                android:id="@+id/growth_daily_share"
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_20"
                android:src="@mipmap/growth_daily_share"
                android:layout_gravity="bottom" />
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/dp_12"
            android:text="@{growthDailyBean.content}"
            android:textColor="@color/gray6"
            android:textSize="@dimen/sp_13"/>
        <FrameLayout
            android:id="@+id/media_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/dp_10">

            <pro.widget.NineGridLayout.NineGridlayout
                android:id="@+id/pic_grid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <!--<pro.widget.NineGridLayout.CustomImageView
                android:id="@+id/image_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop" />-->
            <pro.widget.NineGridLayout.HoldScaleImageView
                android:id="@+id/image_view"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_200"
                android:scaleType="centerInside"
                app:holdHeight="true"/>
            <com.shuyu.gsyvideoplayer.video.StandardGSYVideoPlayer
                android:id="@+id/video_item_player"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_200"/>
        </FrameLayout>

        <com.zjhz.teacher.ui.view.ScrollViewWithListView
            android:id="@+id/audio_play_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:cacheColorHint="#00000000"
            android:divider="#00000000"
            android:dividerHeight="@dimen/dp_10"
            android:listSelector="#00000000" />

        <LinearLayout
            android:id="@+id/homework_comment_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_8"
            android:orientation="vertical"
            android:visibility="gone">

            <LinearLayout
                android:id="@+id/homework_comment_layout_click"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_25"
                android:gravity="center_vertical"
                android:background="@color/gray_f0">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:src="@mipmap/growth_daily_work"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingLeft="@dimen/dp_10"
                    android:text="作业题干及老师批阅"
                    android:textColor="@color/gray6"
                    android:textSize="@dimen/sp_12" />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dp_10"
                    android:src="@mipmap/arrow_right"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/homework_comment_layout_show"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_1"
                android:orientation="vertical"
                android:background="@color/gray_f0"
                android:visibility="gone">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_20"
                    android:text="题干"
                    android:gravity="center_vertical"
                    android:textColor="@color/gray6"
                    android:textSize="@dimen/sp_12"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_20"
                    android:text="@{homeworkshareBean.homeworkName}"
                    android:gravity="center_vertical"
                    android:textColor="@color/gray6"
                    android:textSize="@dimen/sp_12"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_20"
                    android:text="@{homeworkshareBean.content}"
                    android:gravity="center_vertical"
                    android:textColor="@color/gray9"
                    android:textSize="@dimen/sp_12"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_20"
                    android:text="教师评语及评分"
                    android:gravity="center_vertical"
                    android:textColor="@color/gray6"
                    android:textSize="@dimen/sp_12"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_20"
                    android:text="@{homeworkshareBean.pypf}"
                    android:gravity="center_vertical"
                    android:textColor="@color/gray9"
                    android:textSize="@dimen/sp_12"/>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</layout>