<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context="com.zjhz.teacher.ui.activity.PersonalCalendarDetailActivity">

    <include layout="@layout/title_bar"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45"
        android:orientation="horizontal">

        <View
            android:layout_width="@dimen/dp_0"
            android:layout_height="@dimen/dp_1"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/activity_personal_calendar_detail_text"
            android:layout_width="@dimen/dp_0"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="王飞"
            android:textSize="@dimen/sp14"
            android:textColor="@color/main_bottom_text_color"
            android:layout_weight="9"/>

        <ImageView
            android:id="@+id/activity_personal_calendar_detail_image"
            android:layout_gravity="center"
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:src="@mipmap/person_grade_tag"
            android:layout_weight="1"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0.5"
        android:layout_marginLeft="@dimen/space_13"
        android:layout_marginRight="@dimen/dp_10"
        android:background="@color/activity_personal_calendar_detail_view"/>

    <EditText
        android:id="@+id/activity_personal_calendar_detail_content"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_150"
        android:layout_margin="@dimen/space_13"
        android:background="@drawable/yuanjiao"
        android:textColor="@color/text_color28"
        android:textSize="@dimen/sp14"
        android:gravity="left|top"
        android:maxLength="50"
        android:padding="@dimen/dp_5"
        android:hint="@string/content"/>

    <EditText
        android:id="@+id/activity_personal_calendar_detail_content_ed"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_150"
        android:layout_margin="@dimen/space_13"
        android:background="@drawable/yuanjiao"
        android:textColor="@color/text_color28"
        android:maxLength="50"
        android:textSize="@dimen/sp14"
        android:gravity="left|top"
        android:padding="@dimen/dp_5"
        android:hint="@string/remark"/>

</LinearLayout>
