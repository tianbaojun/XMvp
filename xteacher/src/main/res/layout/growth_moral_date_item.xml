<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="monthListBean"
            type="com.zjhz.teacher.NetworkRequests.response.GrowthMoralBeanRes.MonthListBean"/>
    </data>
    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal" android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/gray_f8"
            android:layout_marginTop="@dimen/dp_10"
            android:gravity="center_vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:minHeight="@dimen/dp_30"
                android:paddingTop="@dimen/dp_8"
                android:gravity="top"
                android:layout_marginLeft="@dimen/dp_22"
                android:text="@{monthListBean.day}"
                android:textStyle="bold"
                android:textColor="@color/gray3"
                android:textSize="@dimen/sp_13"/>
            <com.zjhz.teacher.ui.view.ScrollViewWithListView
                android:id="@+id/growth_date_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_15"
                android:divider="@color/gray_df"
                android:dividerHeight="@dimen/dp_1"/>
        </LinearLayout>
        <View
            android:layout_width="@dimen/dp_1"
            android:layout_height="match_parent"
            android:background="@color/gray_df"
            android:layout_marginLeft="@dimen/dp_11"/>
        <TextView
            android:layout_width="@dimen/dp_8"
            android:layout_height="@dimen/dp_8"
            android:layout_marginLeft="@dimen/dp_8"
            android:layout_marginTop="@dimen/dp_20"
            android:background="@{Float.parseFloat(monthListBean.total) >= 0 ? @drawable/growth_moral_plus_shape : @drawable/growth_moral_reduce_shape}" />
    </FrameLayout>
</layout>