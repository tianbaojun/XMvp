<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.zjhz.teacher.ui.activity.ExtramuralLocationActivity">

    <!--<View
        android:id="@+id/shcool_location_view_zero"
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:background="@color/title_background_red"
        android:layout_height="@dimen/dp_25"/>-->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_43"
        android:id="@+id/activity_extramural_location_include"
        android:background="@color/title_background_red">

        <TextView
            android:id="@+id/extramuraltitle_back_img"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:paddingLeft="@dimen/dp_15"
            android:clickable="true"
            android:paddingRight="@dimen/dp_15"
            android:drawableLeft="@mipmap/title_back"
            android:textSize="@dimen/sp_18"
            android:textColor="@color/white"
            android:visibility="visible" />
        <TextView
            android:id="@+id/extramural_title_tv"
            android:textSize="@dimen/sp_18"
            android:textColor="@color/white"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true" />

        <TextView
            android:id="@+id/extramural_right_text"
            android:text="@string/choose_student"
            android:textSize="@dimen/sp_16"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:paddingRight="@dimen/dp_15"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true" />

        <TextView
            android:id="@+id/extramural_right_text_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textSize="@dimen/sp_16"
            android:textColor="@color/white"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_alignParentRight="true" />
    </RelativeLayout>

    <com.baidu.mapapi.map.MapView
        android:id="@+id/activity_extramural_location_bmapView"
        android:layout_below="@+id/activity_extramural_location_include"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:clickable="true" />

    <include layout="@layout/fly_menu"/>
</RelativeLayout>
