    <!-- 顶部带圆角 白色背景 灰色边框 无下边框 长方体 -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
<item>
    <shape>
        <solid android:color="#424242" />
        <corners android:topLeftRadius="@dimen/dp_2" android:topRightRadius="@dimen/dp_2"
            android:bottomRightRadius="@dimen/dp_2" android:bottomLeftRadius="@dimen/dp_2" />
        <stroke android:width="1dp" android:color="#424242" />
    </shape>
</item>
<item android:top="1dp" android:left="1dp" android:right="1dp" android:bottom="1dp">
    <shape>
        <solid android:color="#424242" />
        <corners android:topLeftRadius="@dimen/dp_2" android:topRightRadius="@dimen/dp_2"
            android:bottomRightRadius="@dimen/dp_2" android:bottomLeftRadius="@dimen/dp_2" />
        <stroke android:width="1dp" android:color="#424242" />
    </shape>
</item>
</layer-list>
