<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <shape>
            <corners android:topLeftRadius="@dimen/dp_5"
                android:bottomLeftRadius="@dimen/dp_5" />
            <stroke android:width="@dimen/dp_2" android:color="@color/white"/>
            <solid android:color="@color/white"/>
            <padding android:left="@dimen/dp_8" android:right="@dimen/dp_8"
                android:top="@dimen/dp_4" android:bottom="@dimen/dp_4"/>
        </shape>
    </item>
    <item android:state_checked="false">
        <shape>
            <corners android:topLeftRadius="@dimen/dp_5"
                android:bottomLeftRadius="@dimen/dp_5" />
            <stroke android:width="@dimen/dp_2" android:color="@color/white"/>
            <solid android:color="@color/title_background_red"/>
            <padding android:left="@dimen/dp_8" android:right="@dimen/dp_8"
                android:top="@dimen/dp_4" android:bottom="@dimen/dp_4"/>
        </shape>

    </item>
</selector>